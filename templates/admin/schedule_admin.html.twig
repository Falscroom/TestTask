{# templates/admin/custom_view.html.twig #}

{% extends '@SonataAdmin/standard_layout.html.twig' %}


{% block sonata_admin_content %}
    <div class="box box-primary">
        <div class="box-body">
            {% if show_success_message == true %}
            <div class="alert alert-success" role="alert">
                Schedule updated!
            </div>
            {% endif %}
            <div class="col-lg-6">
                {{ form_start(form) }}
                    {% include 'admin/form_day.html.twig' with {'form': form.Sunday, 'day' : 'Sunday'} %}
                    {% include 'admin/form_day.html.twig' with {'form': form.Monday, 'day' : 'Monday'} %}
                    {% include 'admin/form_day.html.twig' with {'form': form.Tuesday, 'day' : 'Tuesday'} %}
                    {% include 'admin/form_day.html.twig' with {'form': form.Wednesday, 'day' : 'Wednesday'} %}
                    {% include 'admin/form_day.html.twig' with {'form': form.Thursday, 'day' : 'Thursday'} %}
                    {% include 'admin/form_day.html.twig' with {'form': form.Friday, 'day' : 'Friday'} %}
                    {% include 'admin/form_day.html.twig' with {'form': form.Saturday, 'day' : 'Saturday'} %}
                <div class="row">
                    {{ form_widget(form.save, { 'attr': {'class': 'btn btn-default', 'style' : 'width: 200px; margin-top: 10px;'} }) }}
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('/js/schedule_admin.js') }}"></script>
{% endblock %}